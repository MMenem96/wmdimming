<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".outdoors.OutdoorActivity">

    <TextView
        android:id="@+id/tvOutdoorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkPurple"
        android:gravity="center"
        android:minHeight="?android:attr/actionBarSize"
        android:text="@string/garden"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.TabLayout
        android:id="@+id/outdoorsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:minHeight="?android:attr/actionBarSize"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/darkPurple"
        app:tabIndicatorHeight="2dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/darkPurple"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/darkPurple" />

    <android.support.v4.view.ViewPager
        android:id="@+id/outdoorPager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

</LinearLayout>